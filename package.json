{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "Serverless Nextjs + lambda boilerplate on Now.sh platform",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon devServer.js",
    "lint": "eslint --fix .",
    "now-build": "next build",
    "test": "npm run lint && npm run test:components && npm run test:lambdas && npm run test:modules",
    "test:components": "jest components",
    "test:lambdas": "jest --testEnvironment=node api",
    "test:modules": "jest --testEnvironment=node modules",
    "updatesSnapshots": "npm run test:components -- -u"
  },
  "keywords": [],
  "author": "Pierre-Louis Renaudin",
  "license": "ISC",
  "dependencies": {
    "@zeit/next-less": "1.0.1",
    "express": "4.16.4",
    "isomorphic-unfetch": "3.0.0",
    "less": "3.9.0",
    "next": "8.0.3",
    "react": "16.8.5",
    "react-dom": "16.8.5"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "babel-jest": "24.5.0",
    "eslint": "5.15.3",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.10",
    "prettier": "1.16.1",
    "prettier-eslint": "8.8.2",
    "react-test-renderer": "16.8.5"
  },
  "nodemonConfig": {
    "timeout": 1000
  },
  "lint-staged": {
    "*.{js,jsx,json,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "plugins": [
      "babel",
      "react",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "no-console": "off",
      "prettier/prettier": "error",
      "react/jsx-uses-vars": 2,
      "func-style": [
        "error",
        "declaration",
        {
          "allowArrowFunctions": true
        }
      ]
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    ".next",
    "node_modules"
  ],
  "babel": {
    "presets": [
      "next/babel"
    ]
  }
}
