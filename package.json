{
  "name": "serverless-boilerplate",
  "version": "1.0.0",
  "description": "Serverless Nextjs + lambda boilerplate on Now.sh platform",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon devServer.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix .",
    "test": "npm run lint && npm run test:components && npm run test:lambdas",
    "test:components": "jest components",
    "test:lambdas": "jest --testEnvironment=node api"
  },
  "keywords": [],
  "author": "Pierre-Louis Renaudin",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^7.0.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "prettier-eslint": "^8.8.2",
    "react-test-renderer": "^16.7.0"
  },
  "nodemonConfig": {
    "timeout": 1000
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ]
  }
}
